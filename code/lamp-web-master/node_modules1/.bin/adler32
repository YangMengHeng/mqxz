#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node --max-old-space-size=3072"  "$basedir/../adler-32/bin/adler32.njs" "$@"
  ret=$?
else 
  node --max-old-space-size=3072  "$basedir/../adler-32/bin/adler32.njs" "$@"
  ret=$?
fi
exit $ret


